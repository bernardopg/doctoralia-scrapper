# ========================================
# CONFIGURAÇÃO DO DOCTORALIA SCRAPPER
# ========================================

# =============
# TELEGRAM BOT
# =============
# Token do bot do Telegram (obtenha com @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID do chat para notificações (obtenha com @userinfobot)
TELEGRAM_CHAT_ID=your_chat_id_here

# Habilitar notificações via Telegram (true/false)
TELEGRAM_ENABLED=false

# =============
# DOCTORALIA
# =============
# URL do seu perfil no Doctoralia
DOCTORALIA_PROFILE_URL=https://www.doctoralia.com.br/seu-perfil

# URL base do Doctoralia (geralmente não precisa alterar)
DOCTORALIA_BASE_URL=https://www.doctoralia.com.br

# =============
# SCRAPING
# =============
# Executar navegador em modo headless (true/false)
SCRAPING_HEADLESS=true

# Timeout para carregamento de páginas (segundos)
SCRAPING_TIMEOUT=60

# Delay mínimo entre requests (segundos)
SCRAPING_DELAY_MIN=2.0

# Delay máximo entre requests (segundos)
SCRAPING_DELAY_MAX=4.0

# Número máximo de tentativas
SCRAPING_MAX_RETRIES=5

# =============
# DAEMON
# =============
# Intervalo entre execuções do daemon (minutos)
DAEMON_INTERVAL=30

# Número máximo de ciclos (-1 para infinito)
DAEMON_MAX_CYCLES=-1

# Executar daemon no startup (true/false)
DAEMON_RUN_ON_STARTUP=false

# =============
# LOGGING
# =============
# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Tamanho máximo do arquivo de log
LOG_MAX_FILE_SIZE=10MB

# Número de arquivos de backup
LOG_BACKUP_COUNT=5

# Exibir logs no console (true/false)
LOG_CONSOLE_OUTPUT=true

# =============
# PATHS
# =============
# Diretório base do projeto (deixe vazio para usar padrão)
BASE_DIR=

# Diretório de dados (deixe vazio para usar padrão)
DATA_DIR=

# =============
# SELENIUM
# =============
# Caminho para o ChromeDriver (deixe vazio para usar padrão)
CHROMEDRIVER_PATH=

# Argumentos adicionais para o Chrome
CHROME_ARGS=--no-sandbox,--disable-dev-shm-usage

# =============
# DESENVOLVIMENTO
# =============
# Modo debug (true/false)
DEBUG_MODE=false

# Salvar HTML das páginas para debug (true/false)
SAVE_DEBUG_HTML=false

# Diretório para arquivos de debug
DEBUG_DIR=data/debug
